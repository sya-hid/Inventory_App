<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ui.auth.signup.SignupFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFF"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="26dp"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/imvProfil"
            android:layout_marginTop="26dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_picture_empty"
            android:layout_width="110dp"
            android:layout_height="110dp"/>

        <TextView
            android:layout_marginTop="16dp"
            style="@style/TextView.PoppinsNormal16sp020202"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NIK" />

        <EditText
            android:id="@+id/edtNIK"
            android:inputType="text"
            android:layout_marginTop="6dp"
            android:padding="10dp"
            android:background="@drawable/shape_rectangle_outline_8_020202"        style="@style/EditText.PoppinsNormal14sp8D92A3"
            android:hint="Type your full name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="16dp"
            style="@style/TextView.PoppinsNormal16sp020202"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full Name" />

        <EditText
            android:id="@+id/edtName"
            android:inputType="textEmailAddress"
            android:layout_marginTop="6dp"
            android:padding="10dp"
            android:background="@drawable/shape_rectangle_outline_8_020202"        style="@style/EditText.PoppinsNormal14sp8D92A3"
            android:hint="Type your full name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="16dp"
            style="@style/TextView.PoppinsNormal16sp020202"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email Address" />
        <EditText
            android:id="@+id/edtEmail"
            android:inputType="textEmailAddress"
            android:layout_marginTop="6dp"
            android:padding="10dp"
            android:background="@drawable/shape_rectangle_outline_8_020202"
            style="@style/EditText.PoppinsNormal14sp8D92A3"
            android:hint="Type your email address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="16dp"
            style="@style/TextView.PoppinsNormal16sp020202"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password" />
        <EditText
            android:id="@+id/edtPassword"
            android:layout_marginTop="6dp"
            android:inputType="textPassword"
            android:padding="10dp"
            android:background="@drawable/shape_rectangle_outline_8_020202"
            style="@style/EditText.PoppinsNormal14sp8D92A3"
            android:hint="Type your password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="16dp"
            style="@style/TextView.PoppinsNormal16sp020202"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No. HP" />
        <EditText
            android:id="@+id/edtNoHP"
            android:layout_marginTop="6dp"
            android:inputType="text"
            android:padding="10dp"
            android:background="@drawable/shape_rectangle_outline_8_020202"
            style="@style/EditText.PoppinsNormal14sp8D92A3"
            android:hint="Type your phone number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="16dp"
            style="@style/TextView.PoppinsNormal16sp020202"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alamat" />
        <EditText
            android:id="@+id/edtAlamat"
            android:layout_marginTop="6dp"
            android:inputType="text"
            android:padding="10dp"
            android:background="@drawable/shape_rectangle_outline_8_020202"
            style="@style/EditText.PoppinsNormal14sp8D92A3"
            android:hint="Type your phone number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="16dp"
            style="@style/TextView.PoppinsNormal16sp020202"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Level" />
        <EditText
            android:id="@+id/edtLevel"
            android:layout_marginTop="6dp"
            android:inputType="text"
            android:padding="10dp"
            android:editable="false"
            android:background="@drawable/shape_rectangle_outline_8_020202"
            style="@style/EditText.PoppinsNormal14sp8D92A3"
            android:hint="Type your phone number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btnContinue"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            style="@style/Button.Primary"
            android:textAllCaps="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Simpan"/>



    </LinearLayout>
</androidx.core.widget.NestedScrollView>